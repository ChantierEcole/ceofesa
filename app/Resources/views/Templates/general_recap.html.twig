<!doctype html public "-//W3C//Dtd html 4.01//EN" "http://www.w3.org/tr/html4/strict.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=8">
    <title>Récapitulatif général</title>
    <style type="text/css">

        body {margin-top: 0px;margin-left: 0px;}

        #page_1 {position:relative;margin: 64px 0px 546px 28px;padding: 0px;border: none;width: 766px;}

        #page_1 #dimg1 {position:absolute;top:0px;left:8px;z-index:-1;width:489px;height:86px;}
        #page_1 #dimg1 #img1 {width:489px;height:86px;}

        table, tr, td, th, tbody, thead, tfoot {
            page-break-inside: avoid !important;
        }

        .dclr {clear:both;float:none;height:1px;margin:0px;padding:0px;overflow:hidden;}

        .ft0{font: 13px 'Kalinga';line-height: 20px;}
        .ft1{font: 13px 'Kalinga';line-height: 19px;}
        .ft2{font: 14px 'Kalinga';line-height: 20px;}
        .ft3{font: 15px 'Kalinga';line-height: 23px;}
        .ft4{font: 1px 'Kalinga';line-height: 1px;}

        .p0{text-align: left;padding-left: 14px;margin-top: 98px;margin-bottom: 0px;}
        .p1{text-align: left;padding-left: 14px;margin-top: 0px;margin-bottom: 0px;}
        .p2{text-align: left;margin-top: 0px;margin-bottom: 0px;white-space: nowrap;}

        .td0{padding: 0px;margin: 0px;width: 0px;vertical-align: bottom;}
        .td1{padding: 0px;margin: 0px;width: 403px;vertical-align: bottom;}
        .td2{padding: 0px;margin: 0px;width: 201px;vertical-align: bottom;}

        .tr0{height: 21px;}
        .tr1{height: 28px;}
        .tr2{height: 7px;}
        .tr3{height: 26px;}
        .tr4{height: 19px;}
        .tr5{height: 23px;}

        .t0{width: 604px;margin-left: 14px;font: 13px 'Kalinga';}
        .t1{width: 736px;margin-top: 65px;font: bold 12px 'Kalinga';}

        .content-table {
            border-collapse: collapse;
            font-size: 12px;
        }

        .content-table, .content-table th, .content-table td {
            border: 1px solid black;
        }

        .content-table thead {
            background-color: rgba(135, 170, 29, 0.2);
        }

        .content-table th {
            font-size: 9px;
        }

        .content-table td, .content-table th {
            padding: 0.75em;
        }

        .content-table tbody tr:nth-child(even) {
            background-color: rgba(227, 251, 220, 0.3);
        }

        .td-75 {
            width: 75px;
        }

    </style>
</head>

<body style="margin: 0;">
<div id="page_1">
    <div id="dimg1">
        <IMG src="{{ webRootDir~asset('img/logos/logo-OFESA.jpg') }}" id="img1">
    </div>


    <div class="dclr"></div>
    <P class="p0 ft0"><NOBR>119-121</NOBR> rue Damrémont</P>
    <P class="p1 ft1">75018 PARIS</P>
    <table cellpadding=0 cellspacing=0 class="t0">
        <tr>
            <td class="tr0 td0"></td>
            <td rowspan=2 class="tr1 td1"><P class="p2 ft0">Tél. :01.48.07.60.31</P></td>
            <td class="tr0 td2"><P class="p2 ft2"><NOBR>Synthèse générale</NOBR><br />du {{ start | date('d-m-Y') }} au {{  end | date('d-m-Y') }}</P></td>
        </tr>
        <tr>
            <td class="tr2 td0"></td>
            <td rowspan=2 class="tr3 td2"><P class="p2 ft3"></P></td>
        </tr>
        <tr>
            <td class="tr4 td0"></td>
            <td class="tr4 td1"><P class="p2 ft1">Fax: 01.48.07.52.11</P></td>
        </tr>
        <tr>
            <td class="tr5 td0"></td>
            <td class="tr5 td1"><P class="p2 ft4">&nbsp;</P></td>
            <td class="tr5 td2"><P class="p2 ft3"></P></td>
        </tr>
    </table>
    <table class="content-table">
        <thead>
            <tr>
                <th>Ref. APC</th>
                <th>Stagiaire</th>
                <th>Structure</th>
                <th>Module</th>
                <th class="td-75">Nombre d'heures de la période</th>
                <th class="td-75">Cumul d'heures réalisées depuis le début du parcours</th>
                <th class="td-75">Nombre d'heures prévues pour le parcours</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.dossier }}</td>
                <td>{{ participant.nom }} {{ participant.prenom }}</td>
                <td>{{ participant.structure }}</td>
                <td>{{ participant.type }}</td>
                <td class="td-75">{{ participant.nombreHeureMois | default('0.00') }}</td>
                <td class="td-75">{{ participant.nombreHeureCumulee | default('0.00') }}</td>
                <td class="td-75">{{ participant.nombreHeurePrevue | default('0.00') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</body>
</html>
