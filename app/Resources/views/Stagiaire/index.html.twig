{% extends '::layout.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-visible">
            <div class="panel-heading">
                <div class="panel-title hidden-xs"><span class="glyphicon glyphicon-list"></span> Liste des Stagiaires </div>
            </div>
            <div class="panel-body padding-bottom-none">
                <div class="clearfix"></div>
                <table class="table table-striped table-bordered table-hover dataTable" id="datatable">
                    <thead>
                        <tr role="row">
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Email</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.trsNom }}</td>
                            <td>{{ entity.trsPrenom }}</td>
                            <td>{{ entity.trsEmail }}</td>
                            <td class="text-center">
                                <a href="{{ path('stagiaire_show', { 'id': entity.trsId }) }}">
                                    <button type="button" class="btn btn-green3 btn-xs">
                                        <i class="fa fa-eye"></i> Voir
                                    </button>
                                </a>

                                <a href="{{ path('stagiaire_edit', { 'id': entity.trsId }) }}">
                                    <button type="button" class="btn btn-blue4 btn-xs">
                                        <i class="fa fa-pencil"></i> Editer
                                    </button>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
{% endblock %}