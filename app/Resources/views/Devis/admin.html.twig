{% extends '::layout.html.twig' %}
{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-visible">
            <div class="panel-heading">
                <div class="panel-title hidden-xs"><span class="glyphicon glyphicon-list"></span> Liste des Devis en Cours </div>
            </div>
            <div class="panel-body">
                <div class="clearfix"></div>

                <table class="table table-striped table-bordered table-hover dataTable records_list" id="datatable">
                    <thead>
                        <tr>
                            <th>Structure Concernée</th>
                            <th>Numero</th>
                            <th>Date du devis</th>
                            <th>Prix total</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    	{% for entity in entities %}
                    	<tr>
                    		<td>{{ entity.devStructure.strNom }}
                            <td>{{ entity.devAnnee }}-{{ "%04d"|format(entity.devNumero) }}</td>
                            <td>{% if entity.devDatedevis %}{{ entity.devDatedevis|date('Y-m-d') }}{% endif %}</td>
                            <td>{{ entity.devPrixtotal|number_format(2, ',', ' ')  }} €</td>
                            <td>{{ entity.devStatut }}</td>
                            <td class="text-center">
                                <a href="{{ path('devis_show', { 'id': entity.devId }) }}">
                                    <button type="button" class="btn btn-green3 btn-xs">
                                        <i class="fa fa-eye"></i> Voir
                                    </button>
                                </a>
                            </td>
                        </tr>
                       {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}
{% block javascripts %}
{% endblock %}