{% extends '::layout.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-visible">
            <div class="panel-heading">
                <div class="panel-title hidden-xs"><span class="glyphicon glyphicon-list"></span> Ajouter un sous-traitant à la structure </div>
            </div>
            <div class="panel-body padding-bottom-none">
                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.relSoustraitant) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.relDateDebut) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.relDateFin) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-md-offset-8 ta-right">
                        <a href="{{ path('soustraitant_list') }}">
                            <button type="button" class="btn btn-light4 spacing-button">
                                Retour
                            </button>
                        </a>
                        <a href="{{ path('structure_new') }}">
                            <button type="button" class="btn btn-primary spacing-button">
                                Créer un sous-traitant
                            </button>
                        </a>
                        {{ form_widget(form.enregistrer) }}
                    </div>
                </div>

                {{ form_end(form) }}

                <br />

            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
{% endblock %}