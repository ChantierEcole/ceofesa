{% extends '::layout.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block body -%}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-visible">
            <div class="panel-heading">
                <div class="panel-title hidden-xs"> <span class="glyphicon glyphicon-user"></span>Ajout d'un Sous-Traitant </div>
            </div>
            <div class="panel-body padding-bottom-none">
                {{ form_start(form) }}
                    {{ form_errors(form) }}

                    <div class="col-md-6">
                        {{ form_row(form.strNom) }}
                        {{ form_row(form.strAdresse1) }}
                        {{ form_row(form.strAdresse2) }}
                        {{ form_row(form.strCp) }}
                        {{ form_row(form.strVille) }}
                        {{ form_row(form.strSiret) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.strTelephone) }}
                        {{ form_row(form.strEmail) }}
                        {{ form_row(form.strReponsable) }}
                        {{ form_row(form.strFonction) }}
                        {{ form_row(form.strRegion) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_row(form.enregistrer) }}
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}
{% block javascripts %}
{% endblock %}