{% extends '::layout.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-visible">
                <div class="panel-heading">
                    <div class="panel-title hidden-xs"><span class="glyphicon glyphicon-list"></span> Edition du lien
                        avec le sous traitant
                    </div>
                </div>
                <div class="panel-body padding-bottom-none">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.relSoustraitant) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.relDateDebut) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.relDateFin) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.relEnvoiconvention) }}
                        {{ form_row(form.relDateenvoiconvention) }}
                        {{ form_row(form.relRetourconvention) }}
                        {{ form_row(form.relDateretourconvention) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.relEnvoiavenant) }}
                        {{ form_row(form.relDateenvoiavenant) }}
                        {{ form_row(form.relRetouravenant) }}
                        {{ form_row(form.relDateretouravenant) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-md-offset-8 ta-right">
                        <a href="{{ path('soustraitant_list') }}">
                            <button type="button" class="btn btn-light4 spacing-button">
                                Retour
                            </button>
                        </a>
                        {{ form_widget(form.enregistrer) }}
                    </div>
                </div>
                {{ form_end(form) }}
                <br/>
            </div>
        </div>
    </div>
{% endblock %}
